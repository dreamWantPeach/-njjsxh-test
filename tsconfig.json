{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "outDir": "./types",
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "test"
  ]
}